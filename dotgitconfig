[user]
	name = Teemu Patja
	email = tp@iki.fi
	signingkey = 6580FD4C

[core]
	autocrlf = input
	excludesfile = /Users/tpatja/.gitignore

[diff]
	tool = p4merge

[merge]
	tool = p4merge

[mergetool "p4merge"]
	cmd = "p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\""
	trustExitCode = true
	keepBackup = false

[push]
	default = simple

[log]
	date = default

[alias]
	# msys git + cygwin mintty = no pager, hence the hacks
	undo-commit = reset --soft HEAD^
	pru = !git pull --rebase && git submodule update
	spru = !git stash && git pru && git stash pop
	spush = !git stash && git pru && git push && git stash pop
	l  = !git log|less
	shw = "!f() { git show $1|less; }; f"
  co = checkout
  st = status
  ignore-changes = update-index --assume-unchanged
  unignore-changes = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[[:lower:]]"

[gitreview]
	username = tpatja

[filter "lfs"]
	smudge = git-lfs-cache smudge %f
	required = false
	clean = git-lfs clean -- %f

[broadsoft]
	gitcache = auto

[commit]
	gpgsign = true
[gpg]
	program = gpg2
